{
  "compilerOptions": {
    "target": "es2022",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": true,
    "sourceMap": false,
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src/",
    "paths": {
      "/*": [
        "./*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}